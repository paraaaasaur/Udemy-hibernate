package com.luv2code.springdemo;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.ComponentScan;
import org.springframework.context.annotation.Configuration;

@Configuration
//@ComponentScan("com.luv2code.springdemo")
/*
 * Classes annotated with @Component, @Repository, @Service, @Controller, @Configuration, 
 * or a custom annotation that itself is annotated with @Component 
 * are the only detected candidate components.
*/
public class SportConfig {
	
	// Define bean for our fortune service
	@Bean
	public FortuneService sadFortuneService() {
		return new SadFortuneService();
	}
	
	// Define bean for our swim coach AND inject dependency
	@Bean
	public Coach swimCoach() {
		return new SwimCoach(sadFortuneService());
	}
	
	
}
